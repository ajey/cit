<div id="dep_<%= dependency.id %>" class="dependency_no">

  <% if perms.empty? or perms['edit'].empty? %>
    <a href="#" onclick="jQuery('#dep_<%= dependency.id %>').remove(); return false" ><img src="/images/cross_small.png" class="close-cross" title="<%=_ 'Remove'%>" class="tooltip"></a>
  <% end %>

  <% if dependency.done? %>
    <img src="/images/tick.png" border=0>
  <% end %>
  <%= link_to_task(dependency) %>
  <%= hidden_field_tag("dependencies[]", dependency.task_num) %>
  <span class="divider"></span>
  
</div>
